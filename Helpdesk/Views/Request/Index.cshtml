@model  IEnumerable<Request>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary">Request list</h2>
         </div>
        <div class="col-6 text-end" style="padding: 2pt">
             <a asp-controller="Request" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> &nbsp; Add new request </a>
             
             <form asp-controller="Request" asp-action="Index" method="get" style="margin-top:5pt">
</form>

       
</div>
</div>
     </div>
     <table class="table table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th>
            Your Name
        </th>
        <th>
            Your Email
        </th>
        <th>
            Your Number
        </th>
         <th>
            Your Problem
        </th>
        </tr>
</thead>
@foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.Email
                </td>
                 <td width="50%">
                    @obj.Number
                </td>
                <td width="50%">
                    @obj.Problem
                </td>
            </tr>
        }

</table>
